<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AlertLandingPageTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/CC_Background_Color</item>
    </style>

    <style name="DeleteAlarmDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/CC_Label_Color</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/accent</item> <!-- activated color change as you wish -->
        <item name="android:textColor">@color/accent</item> <!-- checkbox text color -->
    </style>

</resources>
